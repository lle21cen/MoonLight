<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/my_page_fragment1_thumbnail"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:src="@drawable/dummy_100x80" />

    <RelativeLayout
        android:id="@+id/my_page_fragment1_layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/my_page_fragment1_thumbnail">

        <TextView
            android:id="@+id/my_page_fragment1_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:text="2018.09.12" />

        <TextView
            android:id="@+id/my_page_fragment1_contents_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_page_fragment1_date"
            android:textSize="15sp"
            android:textColor="#000000"
            android:text="용비불패" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_page_fragment1_continue_layout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:background="#c1a0b3">

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/my_page_fragment1_contents_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0화"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_page_fragment1_contents_num"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:text="이어보기"
                android:textColor="#ffffff"
                android:textSize="10dp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>