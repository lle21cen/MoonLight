<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPageDir.Fragment2LikeWorks">

    <RelativeLayout
        android:id="@+id/my_page_fragment2_title_layout"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="관심작품"
            android:textSize="9sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/my_page_fragment2_edit"
            android:layout_alignParentRight="true"
            android:text="편집"
            android:textSize="9sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_below="@+id/my_page_fragment2_edit"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="1dp"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_page_fragment2_recycler"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/my_page_fragment2_title_layout"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"/>

</RelativeLayout>