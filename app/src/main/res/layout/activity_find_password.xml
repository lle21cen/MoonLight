<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical"
    tools:context=".RegisterActivityDir.RegisterActivity">

    <LinearLayout
        android:id="@+id/find_pw_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:paddingLeft="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/find_pw_back_btn"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/find_pw_login_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="비밀번호 찾기"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/moonlight_small_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="가입한 이메일과 이름을 입력해주세요.\n이메일로 임시비밀번호가 전송됩니다."
        android:textAlignment="center"
        android:textColor="#786aaa" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/find_pw_email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="E-mail" />

        <EditText
            android:id="@+id/find_pw_email"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@drawable/round_border_white"
            android:paddingLeft="10dp"
            android:hint="이메일을 입력해 주세요"
            android:inputType="textEmailAddress"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/find_pw_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="이름" />

        <EditText
            android:id="@+id/find_pw_name"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@drawable/round_border_white"
            android:paddingLeft="10dp"
            android:hint="회원 이름을 입력해주세요"
            android:inputType="text"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/find_pw_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="존재하지 않는 회원정보입니다."
        android:textColor="#e90005" />

    <Button
        android:id="@+id/find_pw_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/round_border_purple"
        android:text="확인"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/find_pw_cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/round_border_white"
        android:text="취소"
        android:textColor="#666666" />

</LinearLayout>