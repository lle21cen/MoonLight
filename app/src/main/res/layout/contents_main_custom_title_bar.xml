<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/contents_main_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_navigate_before_black_24dp" />

    <TextView
        android:id="@+id/contents_main_title_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/contents_main_back"
        android:text="작품명 들어갈 자리입니다."
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <!--<Button-->
        <!--android:id="@+id/contents_main_like"-->
        <!--android:layout_width="24dp"-->
        <!--android:layout_height="24dp"-->
        <!--android:layout_marginRight="5dp"-->
        <!--android:background="@drawable/ic_favorite_border_black_24dp" />-->

        <Button
            android:id="@+id/contents_main_bell"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_notifications_none_black_24dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/contents_main_open"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_open_icon"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>