<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingLeft="30dp"
    android:paddingTop="7dp"
    android:paddingRight="15dp"
    android:paddingBottom="11dp">

    <ImageView
        android:id="@+id/reply_item_arrow_right"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_subdirectory_arrow_right_black_24dp" />

    <TextView
        android:id="@+id/reply_item_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/reply_item_arrow_right"
        android:text="name"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/reply_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="2018-09-05 13:03" />

    <TextView
        android:id="@+id/reply_item_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reply_item_date"
        android:layout_marginTop="25dp"
        android:text="맞아요 완전 공가무ㅠㅜㅠㅜㅠ\n어떻게 기다리죠??" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reply_item_comment"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reply_accusation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신고" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/like" />

        <TextView
            android:id="@+id/reply_item_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center"
            android:text="0" />
    </LinearLayout>

</RelativeLayout>