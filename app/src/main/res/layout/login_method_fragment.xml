<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsDir.SettingsActivity">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_method_facebook"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/login_method_google"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/login_method_moonlight"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#7f66a7"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:text="Moonlight Login" />

    <Button
        android:id="@+id/login_method_sign_out"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="#7f66a7"
        android:text="Sign Out"
        android:textColor="#ffffff"/>

</LinearLayout>