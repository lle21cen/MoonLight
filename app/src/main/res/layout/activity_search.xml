<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchDir.SearchActivity">

    <RelativeLayout
        android:id="@+id/title_search_layout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/title_mypage_btn"
        android:layout_toRightOf="@+id/title_logo">

        <Button
            android:id="@+id/search_back_btn"
            android:layout_centerVertical="true"
            android:background="@drawable/back"
            android:layout_width="15dp"
            android:layout_height="15dp" />

        <EditText
            android:id="@+id/search_keyword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:hint="@string/title_search"
            android:textAlignment="center"
            android:textSize="12sp" />

        <Button
            android:id="@+id/search_search_btn"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/search"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/search_fragment_container"
        android:layout_below="@+id/title_search_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>