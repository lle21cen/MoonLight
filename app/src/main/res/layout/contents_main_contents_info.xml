<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/contents_main_info_img"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:src="@drawable/contents_main_dummy" />

    <TextView
        android:id="@+id/contents_main_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="작품명이 들어갈 자리입니다."
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/contents_main_info_img" />

    <TextView
        android:id="@+id/contents_main_info_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="글 : "
        app:layout_constraintLeft_toRightOf="@+id/contents_main_info_img"
        app:layout_constraintTop_toBottomOf="@id/contents_main_info_title" />

    <TextView
        android:id="@+id/contents_main_info_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="홍길동"
        android:textColor="#1d68bf"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/contents_main_info_txt1"
        app:layout_constraintTop_toBottomOf="@id/contents_main_info_title" />

    <TextView
        android:id="@+id/contents_main_info_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="   그림 : "
        app:layout_constraintLeft_toRightOf="@+id/contents_main_info_writer"
        app:layout_constraintTop_toBottomOf="@id/contents_main_info_title" />

    <TextView
        android:id="@+id/contents_main_info_painter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="홍길동"
        android:textColor="#1d68bf"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/contents_main_info_txt2"
        app:layout_constraintTop_toBottomOf="@id/contents_main_info_title" />

    <ImageView
        android:id="@+id/contents_main_info_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@drawable/ic_view_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/contents_main_info_img"
        app:layout_constraintLeft_toRightOf="@+id/contents_main_info_img"
        app:layout_constraintTop_toBottomOf="@id/contents_main_info_painter" />

    <TextView
        android:id="@+id/contents_main_info_view_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/contents_main_info_img"
        app:layout_constraintLeft_toRightOf="@+id/contents_main_info_view"
        app:layout_constraintTop_toBottomOf="@id/contents_main_info_painter" />

    <ImageView
        android:id="@+id/contents_main_info_like_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/pick_2"
        android:layout_marginRight="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/contents_main_info_img"
        app:layout_constraintRight_toLeftOf="@+id/contents_main_info_like_count"
        app:layout_constraintTop_toBottomOf="@id/contents_main_info_painter" />

    <TextView
        android:id="@+id/contents_main_info_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/contents_main_info_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contents_main_info_painter" />
</android.support.constraint.ConstraintLayout>