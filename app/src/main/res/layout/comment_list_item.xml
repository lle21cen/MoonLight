<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/comment_item_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="mynameiskhan" />

    <TextView
        android:id="@+id/comment_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="2018-09-05 13:03" />


    <ImageView
        android:id="@+id/comment_best"
        android:layout_below="@id/comment_item_date"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/comment_item_comment"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/comment_best"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_item_date"
        android:layout_marginTop="25dp"
        android:text="너무 재밌어요~다음화는 언제 볼 수 있을까요? 벌써부터 시간이 안가네요 ㅠㅠㅠㅠㅠㅠㅠㅠㅠㅠㅠㅠㅠ" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_item_comment"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comment_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="답글 53" />

        <TextView
            android:id="@+id/comment_accusation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="신고" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/comment_item_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:drawableLeft="@drawable/ic_favorite_red_24dp"
            android:gravity="center"
            android:text="1695" />
    </LinearLayout>

</RelativeLayout>