<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_item_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="15dp">

    <TextView
        android:id="@+id/pop_search_item_keyword_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/pop_search_item_blank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pop_search_item_keyword_num"
        android:text=". "
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/pop_search_item_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pop_search_item_blank"
        android:text=""
        android:textColor="#000000"
        android:textSize="15sp" />

</RelativeLayout>