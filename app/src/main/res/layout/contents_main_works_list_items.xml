<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contents_main_item_layout"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/contents_main_item_image"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <TextView
        android:id="@+id/contents_main_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/contents_main_item_image"
        android:text="작품명"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/contents_main_watch_img"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/watch_now"
        android:layout_toLeftOf="@id/contents_main_cash_layout"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/contents_main_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/contents_main_cash_layout"
        android:layout_toRightOf="@id/contents_main_item_image"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/contents_main_star_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_star_yellow_24dp" />

        <TextView
            android:id="@+id/contents_main_star_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="7dp"
            android:text="10"
            android:textColor="#e90005"
            android:textSize="10.9dp" />

        <LinearLayout
            android:id="@+id/contents_main_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:src="@drawable/view" />

            <TextView
                android:id="@+id/contents_main_item_watch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textSize="10.9dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/comment" />

            <TextView
                android:id="@+id/contents_main_item_comments_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="0"
                android:textSize="10.9dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/contents_main_cash_layout"
        android:layout_width="55dp"
        android:layout_height="70dp"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:background="#786aaa">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/contents_main_cash_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/coin" />

            <TextView
                android:id="@+id/contents_main_item_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contents_main_download_layout"
        android:layout_width="55dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:visibility="visible"
        android:background="#efefef">

        <ImageView
            android:id="@+id/contents_main_download_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/complete" />

    </RelativeLayout>

</RelativeLayout>